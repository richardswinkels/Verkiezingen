<Window x:Class="WpfProject3.CreatePolitiekePartij"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfProject3"
        mc:Ignorable="d"
        Title="Partij toevoegen" Height="315" Width="300" MinHeight="315" MinWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="5" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5" />
            <RowDefinition Height="15" />
            <RowDefinition Height="5" />
            <RowDefinition Height="20" />
            <RowDefinition Height="10" />
            <RowDefinition Height="15" />
            <RowDefinition Height="5" />
            <RowDefinition Height="20" />
            <RowDefinition Height="10" />
            <RowDefinition Height="15" />
            <RowDefinition Height="5" />
            <RowDefinition Height="20" />
            <RowDefinition Height="10" />
            <RowDefinition Height="15" />
            <RowDefinition Height="5" />
            <RowDefinition Height="20" />
            <RowDefinition Height="10" />
            <RowDefinition Height="15" />
            <RowDefinition Height="5" />
            <RowDefinition Height="20" />
            <RowDefinition Height="10" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
            <RowDefinition Height="5" />
        </Grid.RowDefinitions>
        <TextBlock TextDecorations="Underline" FontWeight="Bold" Grid.Column="1" Grid.Row="1">Partijnaam:</TextBlock>
        <TextBox x:Name="txbPartijnaam" MaxLength="200" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="3" />
        <TextBlock TextDecorations="Underline" FontWeight="Bold" Grid.Column="1" Grid.Row="5" Grid.ColumnSpan="3">Adres:</TextBlock>
        <TextBox x:Name="txbAdres" MaxLength="200" Grid.Column="1" Grid.Row="7" Grid.ColumnSpan="3"/>
        <TextBlock TextDecorations="Underline" FontWeight="Bold" Grid.Column="1" Grid.Row="9">Postcode:</TextBlock>
        <TextBox x:Name="txbPostcode" MaxLength="10" Grid.Column="1" Grid.Row="11"/>
        <TextBlock TextDecorations="Underline" FontWeight="Bold" Grid.Column="3" Grid.Row="9">Gemeente:</TextBlock>
        <TextBox x:Name="txbGemeente" MaxLength="200" Grid.Column="3" Grid.Row="11"/>
        <TextBlock TextDecorations="Underline" FontWeight="Bold" Grid.Column="1" Grid.Row="13">E-mailadres:</TextBlock>
        <TextBox x:Name="txbEmail" MaxLength="50" Grid.Column="1" Grid.Row="15" Grid.ColumnSpan="3"/>
        <TextBlock TextDecorations="Underline" FontWeight="Bold" Grid.Column="1" Grid.Row="17">Telefoonnummer:</TextBlock>
        <TextBox x:Name="txbTelefoon" MaxLength="50" Grid.Column="1" Grid.Row="19" Grid.ColumnSpan="3"/>
        <Button x:Name="BtnAddPolitiekePartij" Grid.Column="1" Grid.Row="22" Grid.ColumnSpan="3" Click="BtnAddPolitiekePartij_Click">Politieke partij toevoegen</Button>
    </Grid>
</Window>
